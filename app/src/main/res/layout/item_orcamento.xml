<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginVertical="5dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            app:tint="@color/red" />

        <ImageView
            android:id="@+id/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ic_delete"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_edit"/>

        <TextView
            android:id="@+id/tv_problema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Problema"/>

        <TextView
            android:id="@+id/tv_aparelho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Aparelho"
            android:layout_below="@id/tv_problema"/>

        <TextView
            android:id="@+id/tv_observacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problema"
            android:layout_below="@id/tv_aparelho"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>